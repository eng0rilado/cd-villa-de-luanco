---
import MainLayout from '../../layouts/MainLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';

const breadcrumbs = [
  { label: 'Inicio', href: '/' },
  { label: 'Actualidad' }
];

const newsSections = [
  {
    id: 'noticias',
    title: 'Noticias',
    description: 'Mantente al día con las últimas novedades del club, logros deportivos y anuncios importantes.',
    imageUrl: '/images/actualidad/noticias.jpg',
    href: '/actualidad/noticias',
    features: ['Últimas noticias', 'Anuncios del club', 'Logros deportivos', 'Actualizaciones importantes'],
    count: 15
  },
  {
    id: 'galeria',
    title: 'Galería',
    description: 'Revive los mejores momentos de nuestros eventos, entrenamientos y competiciones.',
    imageUrl: '/images/actualidad/galeria.jpg',
    href: '/actualidad/galeria',
    features: ['Fotos de eventos', 'Momentos deportivos', 'Galerías por actividad', 'Videos destacados'],
    count: 8
  },
  {
    id: 'resultados',
    title: 'Resultados y Clasificaciones',
    description: 'Consulta los resultados de nuestros equipos y las clasificaciones de las competiciones.',
    imageUrl: '/images/actualidad/resultados.jpg',
    href: '/actualidad/resultados',
    features: ['Resultados de partidos', 'Clasificaciones', 'Estadísticas de equipos', 'Próximos encuentros'],
    count: 12
  },
  {
    id: 'destacadas',
    title: 'Noticias Destacadas',
    description: 'Las noticias más importantes y destacadas del club que no te puedes perder.',
    imageUrl: '/images/actualidad/destacadas.jpg',
    href: '/actualidad/destacadas',
    features: ['Noticias importantes', 'Boletín informativo', 'Logros destacados', 'Eventos especiales'],
    count: 5
  }
];
---

<MainLayout 
  title="Actualidad - Club Deportivo Villa" 
  description="Mantente informado con las últimas noticias, galerías, resultados y clasificaciones del Club Deportivo Villa."
  breadcrumbs={breadcrumbs}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-apple-link to-apple-link-hover text-apple-inverse py-20">
    <div class="max-width-content mx-auto px-4">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="display mb-6">
          Actualidad
        </h1>
        <p class="text-xl mb-8 opacity-90">
          Mantente al día con todo lo que sucede en el Club Deportivo Villa. 
          Noticias, galerías, resultados y mucho más.
        </p>
      </div>
    </div>
  </section>

  <!-- News Sections -->
  <section class="py-16 bg-apple-white">
    <div class="max-width-content mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="h1 mb-4">Secciones de Actualidad</h2>
        <p class="subtext max-w-2xl mx-auto">
          Explora todas nuestras secciones de actualidad y mantente informado
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {newsSections.map((section) => (
          <Card
            title={section.title}
            description={section.description}
            imageUrl={section.imageUrl}
            href={section.href}
            className="h-full"
          >
            <div class="space-y-4">
              <!-- Features -->
              <div>
                <h4 class="text-sm font-medium text-apple-primary mb-2">Incluye:</h4>
                <ul class="space-y-1">
                  {section.features.map((feature) => (
                    <li class="flex items-center space-x-2 text-sm">
                      <svg class="w-3 h-3 text-apple-link flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <span class="text-apple-secondary">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Count and CTA -->
              <div class="flex items-center justify-between pt-4 border-t border-apple-hairline">
                <span class="text-sm text-apple-secondary">
                  {section.count} elementos
                </span>
                <Button href={section.href} variant="primary" size="small">
                  Ver {section.title}
                </Button>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest News Preview -->
  <section class="section-strip py-16">
    <div class="max-width-content mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="h1 mb-4">Últimas Noticias</h2>
        <p class="subtext max-w-2xl mx-auto">
          Las noticias más recientes del club
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <Card
          title="Inauguración de la Nueva Pista de Pádel Cubierta"
          description="El Club Deportivo Villa estrena su segunda pista de pádel cubierta con tecnología de última generación."
          imageUrl="/images/news/nueva-pista-padel.jpg"
          href="/actualidad/noticias"
        >
          <div class="flex items-center justify-between mt-4 pt-4 border-t border-apple-hairline">
            <span class="caption text-apple-tertiary">
              {new Date('2024-01-15').toLocaleDateString('es-ES')}
            </span>
            <Button href="/actualidad/noticias" variant="ghost" size="small">
              Leer más
            </Button>
          </div>
        </Card>

        <Card
          title="Nuestro Equipo de Balonmano Campeón Regional"
          description="El equipo juvenil de balonmano se proclama campeón de la liga regional tras una temporada espectacular."
          imageUrl="/images/news/campeonato-balonmano.jpg"
          href="/actualidad/noticias"
        >
          <div class="flex items-center justify-between mt-4 pt-4 border-t border-apple-hairline">
            <span class="caption text-apple-tertiary">
              {new Date('2024-01-10').toLocaleDateString('es-ES')}
            </span>
            <Button href="/actualidad/noticias" variant="ghost" size="small">
              Leer más
            </Button>
          </div>
        </Card>

        <Card
          title="Nuevas Actividades para el Verano 2024"
          description="Descubre las nuevas actividades que hemos preparado para los meses de verano, incluyendo natación y actividades acuáticas."
          imageUrl="/images/news/actividades-verano.jpg"
          href="/actualidad/noticias"
        >
          <div class="flex items-center justify-between mt-4 pt-4 border-t border-apple-hairline">
            <span class="caption text-apple-tertiary">
              {new Date('2024-01-05').toLocaleDateString('es-ES')}
            </span>
            <Button href="/actualidad/noticias" variant="ghost" size="small">
              Leer más
            </Button>
          </div>
        </Card>
      </div>

      <div class="text-center mt-12">
        <Button href="/actualidad/noticias" variant="primary" size="large">
          Ver Todas las Noticias
        </Button>
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="py-16 bg-apple-white">
    <div class="max-width-content mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="h1 mb-6">Boletín Informativo</h2>
        <p class="subtext mb-8">
          Suscríbete a nuestro boletín y recibe las últimas noticias, eventos y ofertas especiales directamente en tu email.
        </p>
        
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="Tu email" 
            class="input flex-1"
            required
          />
          <Button type="submit" variant="primary" size="large">
            Suscribirse
          </Button>
        </form>
        
        <p class="caption text-apple-tertiary mt-4">
          Nos comprometemos a no compartir tu información con terceros.
        </p>
      </div>
    </div>
  </section>

  <!-- Social Media -->
  <section class="section-strip py-16">
    <div class="max-width-content mx-auto px-4 text-center">
      <h2 class="h1 mb-6">Síguenos en Redes Sociales</h2>
      <p class="subtext mb-8 max-w-2xl mx-auto">
        Mantente conectado con nosotros y no te pierdas ningún momento especial
      </p>
      
      <div class="flex justify-center space-x-6">
        <a href="#" class="w-16 h-16 bg-apple-secondary hover:bg-apple-primary rounded-button flex items-center justify-center transition-colors" aria-label="Facebook">
          <svg class="w-8 h-8 text-apple-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
        <a href="#" class="w-16 h-16 bg-apple-secondary hover:bg-apple-primary rounded-button flex items-center justify-center transition-colors" aria-label="Instagram">
          <svg class="w-8 h-8 text-apple-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.014 5.367 18.647.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.326-1.297C4.196 14.894 3.706 13.743 3.706 12.446s.49-2.448 1.297-3.326c.878-.807 2.029-1.297 3.326-1.297s2.448.49 3.326 1.297c.807.878 1.297 2.029 1.297 3.326s-.49 2.448-1.297 3.326c-.878.807-2.029 1.297-3.326 1.297zm7.718-1.297c-.878.807-2.029 1.297-3.326 1.297s-2.448-.49-3.326-1.297c-.807-.878-1.297-2.029-1.297-3.326s.49-2.448 1.297-3.326c.878-.807 2.029-1.297 3.326-1.297s2.448.49 3.326 1.297c.807.878 1.297 2.029 1.297 3.326s-.49 2.448-1.297 3.326z"/>
          </svg>
        </a>
        <a href="#" class="w-16 h-16 bg-apple-secondary hover:bg-apple-primary rounded-button flex items-center justify-center transition-colors" aria-label="Twitter">
          <svg class="w-8 h-8 text-apple-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
          </svg>
        </a>
        <a href="#" class="w-16 h-16 bg-apple-secondary hover:bg-apple-primary rounded-button flex items-center justify-center transition-colors" aria-label="YouTube">
          <svg class="w-8 h-8 text-apple-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</MainLayout>
