      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-8 overflow-visible">
        <!-- Actividades -->
        <div class="nav-dropdown group">
          <a href="/actividades" class="nav-link flex items-center space-x-1">
            <span>Actividades</span>
